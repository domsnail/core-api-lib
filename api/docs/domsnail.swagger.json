{
  "swagger": "2.0",
  "info": {
    "title": "Domsnail API",
    "description": "API для управления системой Threat Intelligence Domsnail",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "WhoisBotService"
    },
    {
      "name": "BotCoordinatorService"
    },
    {
      "name": "NodeManagerService"
    },
    {
      "name": "WhoisService"
    }
  ],
  "host": "0.0.0.0:80",
  "basePath": "/api",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/node/bots": {
      "get": {
        "summary": "Получить статус ботов на узле",
        "description": "Возвращает статус всех подключенных ботов на узле",
        "operationId": "NodeManagerService_GetBotsInfo",
        "responses": {
          "200": {
            "description": "A successful response.(streaming responses)",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "$ref": "#/definitions/v1WhoisInfo"
                },
                "error": {
                  "$ref": "#/definitions/rpcStatus"
                }
              },
              "title": "Stream result of v1WhoisInfo"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "tags": [
          "Node Manager"
        ]
      }
    },
    "/v1/whois/probe": {
      "post": {
        "summary": "Создать WHOIS запрос",
        "description": "Отправляет задание на сканирование хостов из системы WHOIS",
        "operationId": "WhoisService_NewProbe",
        "responses": {
          "200": {
            "description": "A successful response.(streaming responses)",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "$ref": "#/definitions/v1WhoisInfo"
                },
                "error": {
                  "$ref": "#/definitions/rpcStatus"
                }
              },
              "title": "Stream result of v1WhoisInfo"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "responseRequired",
            "description": "Требуется ли синхронный ответ",
            "in": "query",
            "required": false,
            "type": "boolean"
          }
        ],
        "tags": [
          "Node Manager",
          "WHOIS"
        ]
      }
    }
  },
  "definitions": {
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1ConnectionInfo": {
      "type": "object",
      "properties": {
        "queuePool": {
          "type": "string"
        },
        "queuePassword": {
          "type": "string"
        }
      }
    },
    "v1Host": {
      "type": "object",
      "properties": {
        "uuid": {
          "type": "string"
        },
        "dn": {
          "type": "string",
          "title": "Fully Qualified Domain Name (FQDN) or simply Domain Name (DN)"
        },
        "url": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "ip": {
          "$ref": "#/definitions/v1IPAddress"
        }
      }
    },
    "v1IPAddress": {
      "type": "object",
      "properties": {
        "v4": {
          "type": "integer",
          "format": "int64"
        },
        "v6": {
          "type": "string",
          "format": "byte"
        }
      },
      "title": "IPv4 or IPv6 IP address\r\nhttps://stackoverflow.com/questions/51395679/what-is-the-most-efficient-protobuf-type-in-c-for-storing-ipv4-or-ipv6-addre"
    },
    "v1WhoisInfo": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "rawData": {
          "type": "string"
        },
        "sourceServer": {
          "type": "string"
        },
        "redirected": {
          "$ref": "#/definitions/v1WhoisInfo",
          "title": "redirected is used to link to data sourced from original whois server"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
